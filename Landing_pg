<script>
  // Product image slideshow on hover
  let productInterval;
  function startProductSlide(card) {
    const img = card.querySelector('.product-img');
    const images = [
      'https://source.unsplash.com/400x400/?cosmetics',
      'https://source.unsplash.com/400x400/?beauty,skincare'
    ];
    let index = 0;
    productInterval = setInterval(() => {
      index = (index + 1) % images.length;
      img.src = images[index];
    }, 1500);
  }
  function stopProductSlide() {
    clearInterval(productInterval);
  }

  // Model image slideshow
  const modelImages = [
    'https://i.insider.com/5c796a7426289858477ea5c2?width=800&format=jpeg&auto=webp', // Use your provided image
    'https://down-id.img.susercontent.com/file/6048ba0560706745445ee5c81193450a' // Use your provided image
  ];
  let modelIndex = 0;
  setInterval(() => {
    modelIndex = (modelIndex + 1) % modelImages.length;
    // Ensure you have an element with id="modelImage" if you want this script to work.
    // I don't see one in your provided HTML for the "Value Bundle" section.
    // If you want to make the value bundle images cycle, you'll need to adjust their structure.
    // For now, this part of the script might not visibly do anything unless `modelImage` exists.
