  }, 2000);
</script>

  <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Top Bar Message Script ---
            const announcementMessageElement = document.getElementById('announcement-message'); // Correctly target the 'a' tag
            const messages = [
                "USE WELCOME10 FOR 10% OFF FIRST ORDER",
                "🚨 Glow Up Alert! Our New Launch Just Dropped 🚨",
                "Free delivery for PKR 2998/- and above",
                "HURRY UP GIRLS!! 🏃‍♀️⌛" // Added the fourth message
            ];
            let messageIndex = 0;

            function changeTopBarMessage() {
                announcementMessageElement.style.opacity = 0;
                setTimeout(() => {
                    messageIndex = (messageIndex + 1) % messages.length;
                    announcementMessageElement.textContent = messages[messageIndex];
                    announcementMessageElement.style.opacity = 1;
                }, 500); // Fade out duration
            }
            setInterval(changeTopBarMessage, 2000); // Change every 2 seconds (total cycle time including fade)

            // --- Cart Functionality Script ---
            const cartIcon = document.getElementById('cart-icon');
            const cartQuantityBadge = document.getElementById('cart-quantity'); // This ID doesn't exist in your HTML, consider adding it
            const cartSidebar = document.getElementById('cart-sidebar');
            const closeCartBtn = document.querySelector('.close-cart'); // Changed to class selector
            const cartItemsContainer = document.getElementById('cart-items'); // Changed to 'cart-items'
            const cartTotalPrice = document.getElementById('cart-total'); // Changed to 'cart-total'
            const thankYouOverlay = document.getElementById('thank-you-overlay'); // This ID doesn't exist in your HTML, consider adding it
            const buyNowButtons = document.querySelectorAll('.btn.buy-now-btn'); // Selects the 'Buy Now' button
            const addToCartButtons = document.querySelectorAll('.add-to-cart-btn'); // Selects 'Add to Cart' buttons

            let cart = JSON.parse(localStorage.getItem('kleaCart')) || []; // Load cart from localStorage

            function saveCart() {
                localStorage.setItem('kleaCart', JSON.stringify(cart));
            }

            function updateCartDisplay() {
                cartItemsContainer.innerHTML = ''; // Clear current items
                let totalQuantity = 0;
                let totalPrice = 0;

                if (cart.length === 0) {
                    cartItemsContainer.innerHTML = '<p class="empty-cart" style="text-align: center; margin-top: 20px; color: #777;">Your cart is empty.</p>';
                } else {
                    cart.forEach((item) => { 
                        const cartItemDiv = document.createElement('div');
                        cartItemDiv.classList.add('cart-item');
                        cartItemDiv.innerHTML = `
                                <img src="${item.image}" alt="${item.name}" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px; border-radius: 4px;">
                                <div class="cart-item-details">
                                    <div class="cart-item-name" style="font-weight: 500;">${item.name}</div>
                                    <div class="cart-item-price">PKR ${parseFloat(item.price).toFixed(2)}</div>
                                </div>
                                <button class="remove-item-btn" data-product-id="${item.id}">&times;</button>
                        `;
                        cartItemsContainer.appendChild(cartItemDiv);

                        totalQuantity += 1; // Assuming each entry is one item
                        totalPrice += parseFloat(item.price);
                    });
                }

                if (cartQuantityBadge) { // Check if badge element exists before updating
                    cartQuantityBadge.textContent = totalQuantity;
                }
                cartTotalPrice.textContent = `PKR ${totalPrice.toFixed(2)}`;
                saveCart(); // Save cart to localStorage after updating display
            }

            function generateUniqueId() {
                return Date.now().toString(36) + Math.random().toString(36).substr(2);
            }

            function removeFromCart(productId) {
                cart = cart.filter(item => item.id !== productId);
                updateCartDisplay();
            }

            // Modified addToCart to extract product info from the card itself
            addToCartButtons.forEach(button => {
                button.addEventListener('click', (event) => {
                    const productCard = event.target.closest('.product-card');
                    if (productCard) {
                        const productName = productCard.querySelector('h5').textContent;
                        const productPriceText = productCard.querySelector('p').textContent;
                        const productPrice = parseFloat(productPriceText.replace('PKR ', '').replace(',', ''));
                        const productImage = productCard.querySelector('img').src;
                        const productId = generateUniqueId(); // Generate unique ID for each added item

                        // Check if product with the same name already exists in cart to avoid duplicates if desired
                        const existingItem = cart.find(item => item.name === productName);
                        
                        if (!existingItem) { // If not in cart, add it
                            cart.push({
                                id: productId,
                                name: productName,
                                price: productPrice,
                                image: productImage
                            });
                            updateCartDisplay();
                             cartSidebar.classList.add('active'); // Open cart sidebar after adding
                        } else {
                            // Optionally, you can alert the user that the item is already in the cart
                            alert(`${productName} is already in your cart!`);
                            cartSidebar.classList.add('active'); // Still open the cart
                        }
                    }
                });
            });

            // Handle clicks on "Remove" buttons within the cart sidebar
            cartItemsContainer.addEventListener('click', (event) => {
                if (event.target.classList.contains('remove-item-btn')) {
                    const productIdToRemove = event.target.dataset.productId;
                    removeFromCart(productIdToRemove);
                }
            });

            // Handle clicks on "Buy Now" buttons (simplified for this context)
            buyNowButtons.forEach(button => {
                button.addEventListener('click', (event) => {
                    alert('Redirecting to checkout for this item!');
                    // In a real scenario, you'd add this item to cart and then redirect to checkout
                    // For now, this just gives a confirmation.
                });
            });

            // Initial display update when the page loads
            updateCartDisplay();

            // Checkout button action
            document.getElementById('checkout-btn').addEventListener('click', (event) => {
                event.preventDefault(); // Prevent default link behavior
                if (cart.length > 0) {
                    alert('Proceeding to checkout with ' + cart.length + ' item(s). Total: ' + cartTotalPrice.textContent);
                    cart = []; // Clear cart after checkout
                    saveCart(); // Save empty cart
                    updateCartDisplay();
                    cartSidebar.classList.remove('active'); // Close sidebar
                } else {
                    alert('Your cart is empty. Add items before checking out.');m
                }
            });

            // Removed `view-cart-btn` as it was not present in the HTML and no longer needed given the sidebar.
        });
    </script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
